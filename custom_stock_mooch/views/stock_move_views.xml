<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_stock_move_tree_inherit_department" model="ir.ui.view">
    <field name="name">stock.move.tree.department</field>
    <field name="model">stock.move</field>
    <field name="inherit_id" ref="stock.view_move_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_id']" position="after">
        <field name="department_name" string="Departamento"/>
      </xpath>
    </field>
  </record>
  <record id="view_stock_quant_tree_editable_inherit_valuation_v3" model="ir.ui.view">
      <field name="name">stock.quant.tree.editable.inherit.valuation.v3</field>
      <field name="model">stock.quant</field>
      <!-- Mantenemos la referencia a la vista editable -->
      <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
      <field name="arch" type="xml">
          
          <!-- ESTRATEGIA SEGURA: Usamos product_id como ancla -->
          <xpath expr="//field[@name='product_id']" position="after">
              
              <!-- 1. Almacén -->
              <field name="warehouse_id" optional="show" widget="badge"/>
              
              <!-- 2. Valor Monetario -->
              <field name="money_value" 
                      sum="Total Valor" 
                      widget="monetary" 
                      decoration-bf="1"
                      optional="show"/>
                      
              <!-- Campo auxiliar invisible necesario para la moneda -->
              <field name="company_currency_id" column_invisible="1"/>
              
          </xpath>

      </field>
  </record>
  <record id="view_stock_valuation_layer_tree_inherit_wh_v2" model="ir.ui.view">
      <field name="name">stock.valuation.layer.tree.inherit.wh.v2</field>
      <field name="model">stock.valuation.layer</field>
      <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
      <field name="arch" type="xml">
          
          <!-- Lo pondremos PRIMERO en la lista para asegurarnos que se vea -->
          <xpath expr="//field[@name='create_date']" position="before">
              <field name="warehouse_id" optional="show" widget="badge"/>
          </xpath>

      </field>
  </record>
  <record id="view_stock_valuation_layer_tree_inherit_type" model="ir.ui.view">
      <field name="name">stock.valuation.layer.tree.inherit.type</field>
      <field name="model">stock.valuation.layer</field>
      <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
      <field name="arch" type="xml">
          
          <!-- Insertar después de la fecha o del almacén -->
          <xpath expr="//field[@name='create_date']" position="after">
              
              <field name="movement_type"
                      optional="show"
                      widget="badge"
                      decoration-success="movement_type == 'purchase'"
                      decoration-info="movement_type == 'sale'"
                      decoration-warning="movement_type == 'transfer'"
                      decoration-muted="movement_type == 'adjustment'"
                      decoration-danger="movement_type == 'return'"/>
                      
          </xpath>

      </field>
  </record>
</odoo>
