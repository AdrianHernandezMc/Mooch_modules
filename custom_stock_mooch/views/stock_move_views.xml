<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_stock_move_tree_inherit_department" model="ir.ui.view">
    <field name="name">stock.move.tree.department</field>
    <field name="model">stock.move</field>
    <field name="inherit_id" ref="stock.view_move_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='product_id']" position="after">
        <field name="department_name" string="Departamento"/>
      </xpath>
    </field>
    </record>
    <record id="view_stock_valuation_layer_tree_inherit_wh" model="ir.ui.view">
        <field name="name">stock.valuation.layer.tree.inherit.wh</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">

            <!-- Agregamos el Almacén después del Producto -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="warehouse_id" optional="show" widget="badge"/>
            </xpath>

        </field>
    </record>
    <record id="view_stock_valuation_layer_tree_inherit_type" model="ir.ui.view">
        <field name="name">stock.valuation.layer.tree.inherit.type</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            
            <!-- Insertar después de la fecha o del almacén -->
            <xpath expr="//field[@name='create_date']" position="after">
                
                <field name="movement_type"
                       optional="show"
                       widget="badge"
                       decoration-success="movement_type == 'purchase'"
                       decoration-info="movement_type == 'sale'"
                       decoration-warning="movement_type == 'transfer'"
                       decoration-muted="movement_type == 'adjustment'"
                       decoration-danger="movement_type == 'return'"/>
                       
            </xpath>

        </field>
    </record>
</odoo>
