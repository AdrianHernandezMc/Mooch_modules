<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Acción del Wizard -->
  <record id="action_stock_transfer_product_selector_wizard" model="ir.actions.act_window">
    <field name="name">Agregar Productos</field>
    <field name="res_model">stock.transfer.product.selector</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'active_id': active_id}</field>
  </record>

  <!-- Botón en el picking (tal como lo tenías) -->
  <record id="view_picking_form_add_selector_button_wizard" model="ir.ui.view">
    <field name="name">stock.picking.form.add.selector.button.wizard</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="priority">99</field>
    <field name="arch" type="xml">
      <xpath expr="//form/header/button[@name='action_confirm']" position="after">
        <button type="action"
                name="%(action_stock_transfer_product_selector_wizard)d"
                string="Agregar productos"
                class="oe_highlight"/>
      </xpath>
    </field>
  </record>

  <!-- Vista del Wizard -->
  <record id="view_stock_transfer_product_selector_wizard_form" model="ir.ui.view">
    <field name="name">stock.transfer.product.selector.wizard.form</field>
    <field name="model">stock.transfer.product.selector</field>
    <field name="arch" type="xml">
      <form string="Agregar productos a transferencia">
        <sheet>
          <group>
            <group>
              <field name="picking_id" readonly="1"/>
              <field name="location_id" readonly="1"/>
              <field name="location_dest_id" readonly="1"/>
            </group>
            <group>
              <field name="search_term" placeholder="Buscar por código, nombre o código de barras"/>
              <button name="action_search" type="object" string="Buscar" class="btn-primary"/>
            </group>
          </group>

          <!-- Abre vacío: solo aparecerán resultados tras "Buscar" -->
          <field name="selector_ids" context="{'active_test': False}">
            <tree editable="bottom">
              <field name="x_selected"/>
              <field name="product_id"/>
              <field name="default_code"/>
              <field name="name"/>
              <field name="uom_id"/>
              <field name="product_qty"/>
              <field name="price_unit"/>
            </tree>
          </field>
        </sheet>
        <footer>
          <button name="action_confirm" string="Aplicar" type="object" class="btn-primary"/>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
