<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_simple_label2x7_inherit" inherit_id="product.report_simple_label2x7">
            <xpath expr="//t[@t-set='barcode_size']"  position="replace">
                <t t-set="barcode_size" t-value="'width:49.5mm;height:21.5mm'"/>
            </xpath>
            <xpath expr="//t[@t-set='table_style']"  position="replace">
                <t t-set="table_style" t-value="'width:85mm;height:45mm;' + table_style"/>
            </xpath>
            <xpath expr="//div[hasclass('o_label_full')]/ancestor::td" position="replace">
                <td t-att-style="make_invisible and 'visibility:hidden;'" >
                    <div class="o_label_full" t-att-style="table_style">
                        <div class="o_label_name">
                            <strong t-field="product.name"/>
                            <img t-att-src="'data:image/png;base64,' + (product.company_id.logo or user.company_id.logo).decode('utf-8')"
                                 style="max-width: 20mm; max-height: 10mm; float: right"/><br/>
                            <i style="font-size: 70%">Ref: </i>
                            <i t-field="product.partner_reference" style="font-size: 70%"/>
                        </div>
                        <div class="o_label_data">
                            <div class="text-center" style="width: 60%; float: left; font-size: .6em; overflow:hidden;">
                                <t t-if="barcode">
                                    <div t-out="barcode" t-options="{'widget': 'barcode', 'symbology': 'auto', 'img_style': barcode_size}"/>
                                    <span class="text-center" t-out="barcode"/>
                                </t>
                                <br/>
                                <strong> Impresión:  </strong>
                                <span t-out="datetime.datetime.now().strftime('%d/%m/%Y')"/>
                            </div>
                            <div class="text-end" style="line-height:normal">
                                <strong style="font-size: 95%">Contado: </strong>
                                <strong class="o_label_price" style="font-size: 95%" t-out="pricelist._get_product_price(product, 1, pricelist.currency_id or product.currency_id)"
                                        t-options="{'widget': 'monetary', 'display_currency': pricelist.currency_id or product.currency_id, 'label_price': True}"/>
                                <br/>
                                <strong style="font-size: 95%">Crédito: </strong>
                                <strong class="o_label_price" style="font-size: 95%" t-out="product.credit_price"
                                        t-options="{'widget': 'monetary', 'display_currency': pricelist.currency_id or product.currency_id, 'label_price': True}"/>
                            </div>
                        </div>
                    </div>
                </td>
            </xpath>
        </template>
    </data>
</odoo>