<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- 1) Formato de papel 50×25 mm -->
    <record id="paperformat_label_50x25mm" model="report.paperformat">
      <field name="name">Etiqueta 50x25mm</field>
      <field name="default" eval="False"/>
      <field name="format">custom</field>
      <field name="page_height">27</field>
      <field name="page_width">50</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">1</field>
      <field name="margin_bottom">0</field>
      <field name="margin_left">0</field>
      <field name="margin_right">0</field>
    </record>

    <!-- 2) Plantilla QWeb CON MÉTODO MEJORADO -->
    <template id="product_label_qweb_template">
      <t t-call="web.basic_layout">
        <t t-set="doc" t-value="docs[0]"/>
        <div class="page" style="width: 45mm; height: 24mm; padding: 0; margin: 0; border: none; border-collapse: collapse;">
          <div style="font-size: 12px; font-weight: bold; text-align: left; border: none; border-collapse: collapse;">MOOCH</div>
          <table style="font-family: Arial; border: none; border-collapse: collapse;">
            <tr>
              <td style="text-align: left; font-size: 10px; width: 80%; border: none; border-collapse: collapse;">
                <t t-esc="doc.name"/> <t t-esc="doc.department_id.nombre"/>
              </td>
              <td style="text-align: right; font-size: 10px; width: 110%; border: none; border-collapse: collapse;">
                <strong>
                  <t t-esc="round(doc.credit_price * 1.16, 0)"
                    t-options="{'widget':'monetary','display_currency':doc.currency_id,'precision':0}"/>
                </strong><br/>CREDITO<br/>
                <strong>
                  <t t-esc="round(doc.list_price * 1.16, 0)"
                    t-options="{'widget':'monetary','display_currency':doc.currency_id,'precision':0}"/>
                </strong><br/>CONTADO
              </td>
            </tr>
          </table>
          
          <!-- MÉTODO MEJORADO - URL CORREGIDA -->
            <t t-if="doc.barcode">
              <div style="text-align: center; margin-top: 0.1mm;">
                <!-- URL COMPLETAMENTE CORREGIDA -->
                <img t-att-src="'/report/barcode/Code128/'+doc.barcode+'?width=500&amp;height=50&amp;humanreadable=0'" style="width: 100%; height: 5mm"/>
              </div>
              <div style="text-align: center; font-size: 8px; font-weight: bold;">
                <span t-field="doc.barcode"/>
              </div>
            </t>
        </div>
      </t>
    </template>

    <!-- 3) Acción de reporte -->
    <record id="action_report_product_labels" model="ir.actions.report">
      <field name="name">Etiqueta de Producto</field>
      <field name="model">product.template</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_mooch.product_label_qweb_template</field>
      <field name="report_file">product_mooch.product_label_qweb_template</field>
      <field name="paperformat_id" ref="product_mooch.paperformat_label_50x25mm"/>
      <field name="print_report_name">'Etiqueta_' + object.default_code</field>
    </record>
  </data>
</odoo>