<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 1. VISTA DE LISTA (TREE) -->
        <record id="view_move_line_tree_mooch" model="ir.ui.view">
            <field name="name">stock.move.line.tree.mooch</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_tree"/>
            <field name="arch" type="xml">
                <!-- Buscamos la ubicación y agregamos nuestros campos extra -->
                <xpath expr="//field[@name='location_id']" position="after">
                    <field name="quant_rack_area" string="Rack / Área" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- 2. VISTA DE FORMULARIO (FORM) -->
        <record id="view_move_line_form_mooch" model="ir.ui.view">
            <field name="name">stock.move.line.form.mooch</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="quant_rack_area" string="Rack / Área" readonly="1"/>
                </xpath>
            </field>
        </record>

        <!-- 3. VISTA DE BÚSQUEDA (FILTROS Y AGRUPACIÓN) -->
        <record id="stock_move_line_view_search_mooch" model="ir.ui.view">
            <field name="name">stock.move.line.search.mooch</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.stock_move_line_view_search"/>
            <field name="arch" type="xml">

                <!-- A) Agregar campo a la búsqueda rápida (Barra de búsqueda) -->
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="quant_rack_area" string="Rack / Área"/>
                </xpath>

                <!-- B) Agregar opción de "Agrupar por" -->
                <xpath expr="//filter[@name='by_location']" position="after">
                    <filter string="Rack / Área" name="groupby_rack" domain="[]" context="{'group_by': 'quant_rack_area'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>