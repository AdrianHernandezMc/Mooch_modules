<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_sat_sync_tree" model="ir.ui.view">
        <field name="name">sat.sync.tree</field>
        <field name="model">sat.sync</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="rfc_receptor"/>
                <field name="state" widget="statusbar"/>
                <field name="cfdi_count"/>
                <field name="last_sync_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sat_sync_form" model="ir.ui.view">
        <field name="name">sat.sync.form</field>
        <field name="model">sat.sync</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <div class="row">
                            <div class="col-6">
                                <field name="date_start"/>
                            </div>
                            <div class="col-6">
                                <field name="date_end"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <field name="rfc_emisor"/>
                            </div>
                            <div class="col-6">
                                <field name="rfc_receptor"/>
                            </div>
                        </div>
                        <field name="error_message" readonly="1" nolabel="1"/>
                    </group>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_sync_cfdi" string="Sincronizar CFDI" type="object" class="oe_highlight"/>
                    </div>
                    <field name="cfdi_count" readonly="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sat_sync" model="ir.actions.act_window">
        <field name="name">Sincronizar CFDI</field>
        <field name="res_model">sat.sync</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sat_sync_root" name="SAT Sync" sequence="10"/>
    <menuitem id="menu_sat_sync" name="Sincronizar CFDI" parent="menu_sat_sync_root" action="action_sat_sync"/>
</odoo>