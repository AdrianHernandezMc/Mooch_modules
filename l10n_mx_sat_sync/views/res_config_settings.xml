<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_sat_sync" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sat.sync</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Ubicación compatible con Odoo 17 -->
            <xpath expr="//block[@id='invoicing_settings']" position="after">
                <t groups="base.group_system">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12">
                            <h2>Sincronización con el SAT</h2>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="o_setting_box">
                                <div class="setting_search">
                                    <label for="sat_username" string="Usuario SAT"/>
                                    <field name="sat_username" class="o_field_char"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="o_setting_box">
                                <div class="setting_search">
                                    <label for="sat_password" string="Contraseña SAT"/>
                                    <field name="sat_password" class="o_field_char" password="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </field>
    </record>
</odoo>