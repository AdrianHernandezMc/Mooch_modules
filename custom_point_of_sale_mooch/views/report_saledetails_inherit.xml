<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_saledetails_inherit_resumen_completo" inherit_id="point_of_sale.report_saledetails">

            <xpath expr="//div[@id='discounts']" position="before">

                <!-- PROTECCIÓN DE CORTE DE PÁGINA: Todo este bloque viaja junto -->
                <div style="page-break-inside: avoid;">

                    <!-- ========================================== -->
                    <!-- 1. CÁLCULOS (Hacemos todo en un solo ciclo) -->
                    <!-- ========================================== -->
                    <t t-set="suma_tarjetas" t-value="0"/>
                    <t t-set="total_efectivo" t-value="0"/>

                    <!-- Variables para Retiros -->
                    <t t-set="total_retiros" t-value="0"/>
                    <t t-set="has_retiros" t-value="False"/>

                    <t t-if="payments">
                        <t t-foreach="payments" t-as="p_calc">

                            <!-- A) Sumar Tarjetas (Crédito/Débito) -->
                            <t t-if="'Credito' in p_calc['name'] or 'Debito' in p_calc['name']">
                                <t t-set="suma_tarjetas" t-value="suma_tarjetas + p_calc['total']"/>
                            </t>

                            <!-- B) Sumar Efectivo (Busca 'Efectivo' o 'Cash') -->
                            <t t-if="'Efectivo' in p_calc['name'] or 'Cash' in p_calc['name']">
                                <t t-set="total_efectivo" t-value="total_efectivo + p_calc['total']"/>
                            </t>

                            <!-- C) Calcular Retiros (Cash Moves) -->
                            <t t-if="p_calc.get('cash_moves')">
                                <t t-foreach="p_calc['cash_moves']" t-as="m_calc">
                                    <t t-if="m_calc['amount'] &lt; 0">
                                        <t t-set="has_retiros" t-value="True"/>
                                        <t t-set="total_retiros" t-value="total_retiros + m_calc['amount']"/>
                                    </t>
                                </t>
                            </t>

                        </t>
                    </t>

                    <!-- ========================================== -->
                    <!-- 2. TABLA DE RESUMEN (EFECTIVO + TARJETAS)  -->
                    <!-- ========================================== -->
                    <!-- Se muestra si hay algo en efectivo O algo en tarjetas -->
                    <t t-if="total_efectivo != 0 or suma_tarjetas != 0">
                        <br/>
                        <h3>Resumen de Cobros</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th class="text-start">Concepto</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- FILA DE EFECTIVO (Arriba) -->
                                <tr t-if="total_efectivo != 0">
                                    <td><strong>Total Efectivo (Agrupado)</strong></td>
                                    <td class="text-end">
                                        <span t-if="currency['position']">
                                            <span t-out="total_efectivo" t-options="{'widget': 'float', 'precision': currency['precision']}">0.00</span>
                                            <span t-out='currency["symbol"]'>$</span>
                                        </span>
                                        <span t-else="">
                                            <span t-out='currency["symbol"]'>$</span>
                                            <span t-out="total_efectivo" t-options="{'widget': 'float', 'precision': currency['precision']}">0.00</span>
                                        </span>
                                    </td>
                                </tr>

                                <!-- FILA DE TARJETAS (Abajo) -->
                                <tr t-if="suma_tarjetas != 0">
                                    <td><strong>Total Tarjetas (Agrupado)</strong></td>
                                    <td class="text-end">
                                        <span t-if="currency['position']">
                                            <span t-out="suma_tarjetas" t-options="{'widget': 'float', 'precision': currency['precision']}">0.00</span>
                                            <span t-out='currency["symbol"]'>$</span>
                                        </span>
                                        <span t-else="">
                                            <span t-out='currency["symbol"]'>$</span>
                                            <span t-out="suma_tarjetas" t-options="{'widget': 'float', 'precision': currency['precision']}">0.00</span>
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="oe_structure"></div>
                    </t>

                    <!-- ========================================== -->
                    <!-- 3. TABLA DE RETIROS (DETALLADA)            -->
                    <!-- ========================================== -->
                    <t t-if="has_retiros">
                        <br/>
                        <h3>Retiros de Efectivo</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th class="text-start">Motivo del Retiro</th>
                                    <th class="text-end">Monto</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="payments" t-as="p_print">
                                    <t t-if="p_print.get('cash_moves')">
                                        <t t-foreach="p_print['cash_moves']" t-as="move">
                                            <t t-if="move['amount'] &lt; 0">
                                                <tr>
                                                    <td><span t-out="move['name']">Motivo</span></td>
                                                    <td class="text-end">
                                                        <span t-if="currency['position']">
                                                            <span t-out="move['amount']" t-options="{'widget': 'float', 'precision': currency['precision']}">-100.00</span>
                                                            <span t-out='currency["symbol"]'>$</span>
                                                        </span>
                                                        <span t-else="">
                                                            <span t-out='currency["symbol"]'>$</span>
                                                            <span t-out="move['amount']" t-options="{'widget': 'float', 'precision': currency['precision']}">-100.00</span>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </t>
                                <!-- Total de Retiros -->
                                <tr>
                                    <td style="border-top: 1px solid black;"><strong>Total Retirado</strong></td>
                                    <td class="text-end" style="border-top: 1px solid black;">
                                        <strong>
                                            <span t-if="currency['position']">
                                                <span t-out="total_retiros" t-options="{'widget': 'float', 'precision': currency['precision']}">0.00</span>
                                                <span t-out='currency["symbol"]'>$</span>
                                            </span>
                                            <span t-else="">
                                                <span t-out='currency["symbol"]'>$</span>
                                                <span t-out="total_retiros" t-options="{'widget': 'float', 'precision': currency['precision']}">0.00</span>
                                            </span>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="oe_structure"></div>
                    </t>

                </div> <!-- FIN DIV PROTECCION -->
                <br/>

            </xpath>
        </template>
    </data>
</odoo>