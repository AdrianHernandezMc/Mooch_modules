<odoo>
  <data>
    <record id="res_config_settings_view_form_inherit_exchange" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.exchange</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <!-- 1) Campo del producto para los cambios -->
        <xpath expr="//block[@name='integration']" position="inside">
          <setting string="Producto para Cambios"
                   help="Producto usado para registrar cambios/devoluciones en POS.">
            <field name="changes_product_id"
                   options="{'no_open': True}"
                   domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"/>
          </setting>
           <!-- 2) Campo de programa de leatad para los Vales-->
          <setting string="Vale de venta"
                  help="Vale para Programa de Lealtad"   >
            <field name="loyalty_program_id"
                  options="{'no_open': True}"
                  domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"/>
          </setting>
          <setting string="Retiros de efectivo" help="Cantidad/Tope de retiro usado por POS.">
            <field name="withdrawal"/>
          </setting>
          <setting string="Descuento para empleados" help="Porcentaje de descuento automÃ¡tico aplicado a empleados en el punto de venta.">
            <field name="employee_discount"/>
          </setting>
        </xpath>
      </field>
    </record>
    <!-- Vista para los campos de Muebles (Adrian) -->
    <record id="view_pos_config_form_home_box_mooch" model="ir.ui.view">
      <field name="name">pos.config.form.home.box.mooch</field>
      <field name="model">pos.config</field>
      <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form/sheet" position="inside">
          <group string="Hogar (Mooch)">
            <field name="is_home_box"/>
            <field name="enable_maps" modifiers="{'invisible': [('is_home_box','=',False)]}"/>
            <field name="google_maps_api_key" modifiers="{'invisible': ['|', ('is_home_box','=',False), ('enable_maps','=',False)]}"/>
          </group>
        </xpath>
      </field>
    </record>
    <!-- Fin de vistas de Campos Muebles (Adrian) -->
  </data>
</odoo>