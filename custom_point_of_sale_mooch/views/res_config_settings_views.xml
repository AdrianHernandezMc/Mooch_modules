<odoo>
  <data>
    <record id="res_config_settings_view_form_inherit_exchange" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.exchange</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <!-- Ajustes generalos / Integraciones -->
        <xpath expr="//block[@name='integration']" position="inside">
          <setting string="Producto para Cambios"
                   help="Producto usado para registrar cambios/devoluciones en POS.">
            <field name="changes_product_id"
                   options="{'no_open': True}"
                   domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"/>
          </setting>
        </xpath>
      </field>
    </record>
  </data>
</odoo>