<odoo>
  <data noupdate="1">
    <!-- Kanban view -->
    <record id="view_exchange_change_kanban" model="ir.ui.view">
      <field name="name">custom_point_of_sale_mooch.change.kanban</field>
      <field name="model">pos.changes</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="dest_order_uid"/>
          <field name="origin_reference"/>
          <field name="default_code"/>
          <field name="product_name"/>
          <field name="create_date"/>
          <templates>
            <t t-name="kanban-box">
              <div class="o_kanban_record">
                <div>
                    <t t-if="record.origin_reference"><p><strong>Origen:</strong> <t t-esc="record.origin_reference.value"/></p></t>
                    <t t-if="record.dest_order_uid"><p><strong>Destino:</strong> <t t-esc="record.dest_order_uid.value"/></p></t>
                    <t t-if="record.default_code"><p><strong>Codigo:</strong> <t t-esc="record.default_code.value"/></p></t>
                    <t t-if="record.product_name"><p><strong>Nombre:</strong> <t t-esc="record.product_name.value"/></p></t>
                    <t t-if="record.create_date"><p><strong>Fecha:</strong> <t t-esc="record.create_date.value"/></p></t>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    
    <!-- List/Tree view -->
    <record id="view_exchange_change_tree" model="ir.ui.view">
      <field name="name">custom_point_of_sale_mooch.change.tree</field>
      <field name="model">pos.changes</field>
      <field name="arch" type="xml">
        <tree string="Cambios Exchange">
          <field name="dest_order_uid"/>
          <field name="origin_reference"/>
          <field name="default_code"/>
          <field name="product_name"/>
          <field name="create_date"/>
        </tree>
      </field>
    </record>

    <!-- Form view (opcional) -->
     <record id="view_exchange_change_form" model="ir.ui.view">
      <field name="name">custom_point_of_sale_mooch.change.form</field>
      <field name="model">pos.changes</field>
      <field name="arch" type="xml">
        <form string="Cambio Exchange">
          <sheet>
            <group>
              <field name="dest_order_uid"/>
              <field name="origin_reference"/>
              <field name="default_code"/>
              <field name="product_name"/>
              <field name="create_date"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- <record id="exchange_change_action" model="ir.actions.client">
      <field name="name">Cambios Punto de Venta</field>
      <field name="tag">exchage_changes_componet</field>
    </record> -->

    <record id="exchange_change_action" model="ir.actions.act_window">
      <field name="name">Cambios Exchange</field>
      <field name="res_model">pos.changes</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="view_ids" eval="[
          (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_exchange_change_kanban')}),
          (0, 0, {'view_mode': 'tree',   'view_id': ref('view_exchange_change_tree')}),
          (0, 0, {'view_mode': 'form',   'view_id': ref('view_exchange_change_form')})
      ]"/>
    </record>

    <menuitem
      id="exchange_change_menu"
      name="Cambios Punto de Venta"
      parent="point_of_sale.pos_config_menu_catalog"
      action="exchange_change_action"
      sequence="7"/>
  </data>
</odoo>
