<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.SaleDetailsReport" t-inherit="point_of_sale.SaleDetailsReport" t-inherit-mode="extension">
        
        <xpath expr="//div[@class='pos-receipt']" position="replace">
            <!-- FUENTE SUBIDA A 15px -->
            <div class="pos-receipt" style="font-family: 'Courier New', monospace; font-size: 15px; line-height: 1.2; font-weight: bold; color: #000;">

                <!-- 1. ENCABEZADO -->
                <div style="text-align: center;">
                    <t t-if="pos.company_logo_base64">
                        <img t-att-src="pos.company_logo_base64" style="max-width: 50%; max-height: 70px; filter: grayscale(100%) contrast(150%); margin-bottom: 5px;"/>
                        <br/>
                    </t>
                    <!-- T√≠tulo Grande: 19px -->
                    <div style="font-size: 19px; font-weight: 900; margin-top:2px;">
                        <t t-esc="pos.company.name" />
                    </div>
                    <!-- Subt√≠tulo: 16px -->
                    <div style="font-size: 16px; border: 2px solid black; padding: 3px; margin: 5px 0;">
                        <t t-if="is_z_report">CORTE FINAL (Z)</t>
                        <t t-else="">CORTE DE CAJA (X)</t>
                    </div>
                    <!-- Info: 13px -->
                    <div style="font-size: 13px; text-align: left; margin-bottom: 5px;">
                        <div>üìÖ <t t-esc="date" /></div>
                        <div>üë§ <t t-esc="user_name || 'Cajero'" /></div>
                        <div>üè™ Caja: <t t-esc="pos.config.name" /></div>
                        <div>üî¢ Sesi√≥n: <t t-esc="session_name" /></div>
                        <div>üßæ No. Ordenes: <t t-esc="orders_count || 0" /></div>
                    </div>
                </div>

                <!-- 2. RESUMEN VENTA -->
                <div style="border-bottom: 1px solid black; margin-bottom: 3px;"></div>
                <div style="font-size: 16px; text-align: center;">RESUMEN VENTA</div>
                <div style="border-bottom: 1px solid black; margin-bottom: 5px;"></div>
                
                <t t-foreach="payments" t-as="payment" t-key="payment_index">
                    <div style="display: flex; justify-content: space-between;">
                        <span t-esc="payment['name']" />
                        <span t-esc="formatCurrency(payment['total'] || 0, false)" />
                    </div>
                </t>
                
                <div style="border-top: 1px dashed black; margin-top: 5px; margin-bottom: 5px;"></div>

                <div style="display: flex; justify-content: space-between;">
                    <span>Subtotal:</span>
                    <span t-esc="formatCurrency(total_products_base || 0, false)"/>
                </div>
                
                <div style="display: flex; justify-content: space-between;">
                    <span>(+) Impuestos:</span>
                    <span t-esc="formatCurrency(total_impuestos || 0, false)"/>
                </div>
                
                <!-- TOTAL: 18px -->
                <div style="border-top: 2px solid black; margin-top: 3px; padding-top: 2px; display: flex; justify-content: space-between; font-size: 18px; font-weight: 900;">
                    <span>TOTAL:</span>
                    <span t-esc="formatCurrency(total_products_incl || 0, false)" />
                </div>
                <br/>

                <!-- 3. DEDUCCIONES VENTA -->
                <div style="border-bottom: 1px solid black; margin-bottom: 3px;"></div>
                <div style="font-size: 16px; text-align: center;">DEDUCCIONES VENTA</div>
                <div style="border-bottom: 1px solid black; margin-bottom: 5px;"></div>
                
                <div style="display: flex; justify-content: space-between;">
                    <span>DEVOLUCIONES:</span>
                    <span t-esc="formatCurrency(dev_total || 0, false)"/>
                </div>
                
                <div style="display: flex; justify-content: space-between;">
                    <span>DESCUENTOS:</span>
                    <span t-esc="formatCurrency(disc_total || 0, false)"/>
                </div>
                
                <div style="border-top: 1px dashed black; margin-top: 5px; margin-bottom: 5px;"></div>
                
                <div style="display: flex; justify-content: space-between;">
                    <span>Subtotal:</span>
                    <span t-esc="formatCurrency(deduction_base || 0, false)"/>
                </div>
                
                <div style="display: flex; justify-content: space-between;">
                    <span>(+) Impuestos:</span>
                    <span t-esc="formatCurrency(deduction_tax || 0, false)"/>
                </div>
                
                <!-- TOTAL DED: 18px -->
                <div style="border-top: 2px solid black; margin-top: 3px; padding-top: 2px; display: flex; justify-content: space-between; font-size: 18px; font-weight: 900;">
                    <span>TOTAL DED:</span>
                    <span t-esc="formatCurrency(deduction_total || 0, false)"/>
                </div>
                <br/>

                <!-- ============================================== -->
                <!-- 4. MOVIMIENTOS CAJA (CORREGIDO PARA 15px)      -->
                <!-- ============================================== -->
                <div style="border: 2px solid black; padding: 5px; margin-bottom: 10px;">
                    <div style="text-align: center; font-size: 16px; background-color: #000; color: #fff; margin: -2px -2px 5px -2px;">
                        MOVIMIENTOS CAJA
                    </div>
                    
                    <div style="font-size: 14px; border-bottom: 1px dashed black;">(+) INGRESOS</div>
                    
                    <!-- BLOQUE SEGURO -->
                    <t t-if="moves_info">
                        <t t-set="has_entries" t-value="false"/>
                        <t t-foreach="moves_info" t-as="move" t-key="move_index">
                            <t t-if="move and move['amount'] and move['amount'] &gt; 0">
                                <t t-set="has_entries" t-value="true"/>
                                <div style="display: flex; justify-content: space-between; font-size: 13px;">
                                    <span style="flex: 1;"><t t-esc="move['name'].substr(0,18)"/></span>
                                    <span><t t-esc="formatCurrency(move['amount'], false)"/></span>
                                </div>
                            </t>
                        </t>
                        <t t-if="!has_entries">
                            <div style="font-size: 12px; font-style: italic;">(Sin ingresos)</div>
                        </t>
                    </t>
                    <t t-else="">
                        <div style="font-size: 12px;">(Sin datos)</div>
                    </t>

                    <div style="text-align: right; font-size: 14px; font-weight: bold;">
                        Total: <span t-esc="formatCurrency(summary_entradas || 0, false)"/>
                    </div>
                    <br/>

                    <div style="font-size: 14px; border-bottom: 1px dashed black;">(-) RETIROS</div>
                    
                    <t t-if="moves_info">
                        <t t-set="has_outs" t-value="false"/>
                        <t t-foreach="moves_info" t-as="move" t-key="move_index">
                            <t t-if="move and move['amount'] and move['amount'] &lt; 0">
                                <t t-set="has_outs" t-value="true"/>
                                <div style="display: flex; justify-content: space-between; font-size: 13px;">
                                    <span style="flex: 1;"><t t-esc="move['name'].substr(0,18)"/></span>
                                    <span><t t-esc="formatCurrency(move['amount'], false)"/></span>
                                </div>
                            </t>
                        </t>
                        <t t-if="!has_outs">
                            <div style="font-size: 12px; font-style: italic;">(Sin retiros)</div>
                        </t>
                    </t>
                    <t t-else="">
                        <div style="font-size: 12px;">(Sin datos)</div>
                    </t>

                    <div style="text-align: right; font-size: 14px; font-weight: bold;">
                        <t t-set="salidas_pos" t-value="(summary_salidas || 0) * -1"/>
                        <span t-esc="formatCurrency(salidas_pos, false)"/>
                    </div>
                </div>

                <!-- 5. DETALLE PRODUCTOS -->
                <t t-if="products and products.length > 0">
                    <div style="text-align: center; font-size: 16px;">DETALLE PRODUCTOS</div>
                    <div style="border-bottom: 1px solid black; margin-bottom: 3px;"></div>
                    
                    <t t-foreach="products" t-as="category" t-key="category['name']">
                        <t t-foreach="category['products']" t-as="line" t-key="line_index">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 2px;">
                                <span style="flex: 1;">
                                    <!-- A 15px, recortamos a 18 chars para que no salte l√≠nea -->
                                    <t t-esc="line['product_name'].substr(0, 18)" />
                                    <t t-if="line.discount and line.discount > 0">**</t>
                                </span>
                                <span style="white-space: nowrap;">
                                    <t t-esc="line.quantity" />x <t t-esc="formatCurrency(line.price_unit, false)" />
                                </span>
                            </div>
                        </t>
                    </t>
                    
                    <!-- PIE DE PRODUCTOS -->
                    <div style="border-top: 2px solid black; margin-top: 5px; padding-top: 2px;">
                        <div style="display: flex; justify-content: space-between; font-weight: bold; font-size: 14px;">
                            <span>Total Art√≠culos:</span>
                            <t t-esc="Math.round(total_items || 0)" />
                        </div>
                        
                        <div style="border-top: 1px dashed black; margin: 3px 0;"></div>
                        
                        <div style="display: flex; justify-content: space-between; font-size: 14px;">
                            <span>Suma Base:</span>
                            <t t-esc="formatCurrency(total_products_base || 0, false)" />
                        </div>
                        
                        <div style="display: flex; justify-content: space-between; font-size: 14px;">
                            <span>(+) Impuestos:</span>
                            <t t-esc="formatCurrency(total_impuestos || 0, false)" />
                        </div>
                        
                        <div style="display: flex; justify-content: space-between; font-weight: 900; font-size: 18px; margin-top: 2px;">
                            <span>TOTAL PROD:</span>
                            <t t-esc="formatCurrency(total_products_incl || 0, false)" />
                        </div>
                    </div>
                </t>
                
                <br/>
                <t t-if="disc_total and disc_total > 0">
                    <div style="text-align: center; font-size: 12px; margin-bottom: 5px; font-style: italic;">
                        (**) Producto con descuento aplicado
                    </div>
                </t>

                <div style="text-align: center; font-size: 12px;">
                    === FIN DEL REPORTE ===
                </div>
            </div>
        </xpath>
    </t>
</templates>