<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.CashMovePopup" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='cash-move d-flex flex-column']" position="inside">
            <div class="cash-info-box mt-1">
                <label for="total_cash" class="fw-bold cash-label">Efectivo:</label>
                <span t-esc="fmt(totalCashReceived)" class="text-success fs-5"/>
            </div> 
        </xpath>
        <!-- Botón de Calculadora -->
        <xpath expr="//Input" position="after">
            <!-- El atributo t-on-click conecta el botón con el JS -->
            <div class="btn btn-secondary d-flex align-items-center justify-content-center ms-2"
                 t-on-click="openDetailsPopup"
                 style="aspect-ratio: 1; height: auto; cursor: pointer;">
                <i class="fa fa-money fa-2x" role="img" aria-label="Contar dinero" title="Contar dinero"></i>
            </div>
        </xpath>
    </t>
</templates>
