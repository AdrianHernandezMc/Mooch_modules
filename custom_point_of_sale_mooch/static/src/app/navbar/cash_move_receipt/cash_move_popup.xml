<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.CashMovePopup" t-inherit-mode="extension" owl="1">
        
        <xpath expr="//div[@class='cash-move d-flex flex-column']" position="inside">
            <div class="cash-info-box mt-1 text-center" 
                 style="background-color: #f8f9fa; border: 1px solid #dee2e6; border-radius: 5px; padding: 10px;">
                
                <div class="d-flex justify-content-between align-items-center">
                    <label for="total_cash" class="fw-bold cash-label" style="font-size: 1.1em;">Total en Caja:</label>
                    <!-- Usamos la variable de estado calculada -->
                    <span t-esc="fmt(state.cashInfo.total)" class="text-success fs-4 fw-bold"/>
                </div>
                
                <div style="font-size: 11px; color: #6c757d; margin-top: 5px; border-top: 1px solid #e9ecef; padding-top: 4px;">
                    * Incluye Fondo Inicial y Ventas en Efectivo de esta sesión.
                </div>
            </div> 
        </xpath>

        <xpath expr="//Input" position="after">
            <div class="btn btn-secondary d-flex align-items-center justify-content-center ms-2"
                 t-on-click="openDetailsPopup"
                 style="aspect-ratio: 1; height: auto; cursor: pointer;">
                <i class="fa fa-money fa-2x" role="img" aria-label="Contar dinero" title="Contar dinero"></i>
            </div>
        </xpath>
    </t>
</templates>


