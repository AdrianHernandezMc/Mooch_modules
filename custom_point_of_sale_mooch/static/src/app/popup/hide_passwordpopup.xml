<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <!-- Hereda el popup de texto y cambia el input a password -->
  <t t-name="custom_point_of_sale_mooch.PasswordInputPopup"
     t-inherit="point_of_sale.TextInputPopup"
     t-inherit-mode="primary">
    <xpath expr="//input" position="attributes">
      <attribute name="type">password</attribute>
      <attribute name="autocomplete">off</attribute>
      <attribute name="placeholder">NIP</attribute>
    </xpath>
  </t>
</templates>