<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_product_selector_wizard_form" model="ir.ui.view">
    <field name="name">product.selector.wizard.form</field>
    <field name="model">product.selector.wizard</field>
    <field name="arch" type="xml">
      <form string="Seleccionar Productos">
        <group>
          <field name="purchase_id" readonly="1"/>
          <field name="search_term"
                 placeholder="Buscar por nombre o código interno…"
                 options="{'debounce': 300}"/>
          <field name="limit_results" widget="integer" options="{'min': 10, 'max': 500}"/>
        </group>

        <!-- Auxiliar para dominio -->
        <group invisible="1">
          <field name="dept_param_line_id"/>
        </group>

        <separator string="Resultados"/>

        <field name="selector_ids" nolabel="1">
          <tree editable="bottom" string="Productos">
            <field name="x_selected"/>
            <field name="product_id"
                   options="{'no_create': True, 'no_create_edit': True}"
                   domain="[
                     ('purchase_ok','=',True),
                     ('product_tmpl_id.department_id','=', parent.dept_param_line_id)
                   ]"/>
            <field name="default_code"/>
            <field name="barcode"/>
            <field name="dept_line_id"/>
            <field name="product_qty"/>
            <field name="price_unit"/>
          </tree>
        </field>

        <footer>
          <button name="action_confirm" type="object" string="Agregar a Orden de Compra" class="btn-primary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_product_selector_wizard" model="ir.actions.act_window">
    <field name="name">Seleccionar Productos</field>
    <field name="res_model">product.selector.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_product_selector_wizard_form"/>
    <field name="target">new</field>
  </record>
</odoo>
