<odoo>
    <record id="view_purchase_discount_wizard_form" model="ir.ui.view">
        <field name="name">purchase.discount.wizard.form</field>
        <field name="model">purchase.discount.wizard</field>
        <field name="arch" type="xml">
            <form string="Agregar Descuento Global">
                <sheet>
                    <group>
                        <field name="discount_type"/>
                        <field name="discount_value"/>
                        <field name="order_id" invisible="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_apply_discount" string="Aplicar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>