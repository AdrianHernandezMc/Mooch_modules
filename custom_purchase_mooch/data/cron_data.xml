<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron para actualizar departamentos automáticamente -->
        <record id="cron_actualizar_departamentos" model="ir.cron">
            <field name="name">Actualizar Departamentos de Órdenes de Compra</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="state">code</field>
            <field name="code">model.cron_actualizar_departamentos()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>